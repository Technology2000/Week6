import java.util.*;
class TestClass {
    public static void main(String args[] ) throws Exception {
        Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        int a[]=new int[n];
        long ans=1;
        for(int i=0;i<n;i++){
            a[i]=sc.nextInt();
             ans=(ans*(1+a[i]))%1000000007;
        }
        System.out.println(ans-1);
    }
}
